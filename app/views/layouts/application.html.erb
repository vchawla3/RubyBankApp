<!DOCTYPE html>
<%= javascript_include_tag :defaults %>
<html>
  <head>

    <% if notice %><div id="notice"><p style="color:darkgreen; font-size: medium;"><%= notice %></p></div><% end %>
    <% if alert %><div id="alert"><p style="color: red; font-size: medium;"><%= alert %></p></div><% end %>

    <div style="font-size: small; font-weight: bold">

    <% if user_signed_in? %>
        <%= link_to "Account(" + current_user.email + ")", edit_user_registration_path, {:style=>"color:#909;"} %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %></div>

    <title>BankApplication</title>


    <%= stylesheet_link_tag    "application", :media => "all", 'data-turbolinks-track' => true %>
    <%= javascript_include_tag "application", 'data-turbolinks-eval' => false %>
    <%= csrf_meta_tags %>
  </head>

  <body>
  <h1>Online Banking Application</h1>



  <%= yield %>
  <br><br>
  <%= link_to "Return to main menu", admins_url, {:style=>"color:#909;"} %>

  </body>
</html>
