<!DOCTYPE html>
<%= javascript_include_tag :defaults %>
<html>
  <head>

    <% if notice %><div id="notice"><%= notice %></div><% end %>
    <% if alert %><div id="alert"><%= alert %></div><% end %>

    <%= csrf_meta_tags %>

    <% if user_signed_in? %>
        <%= link_to current_user.email, edit_user_registration_path %><b/>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% else %>
        <%= link_to "Login", new_user_session_path %>
    <% end %>

    <title>BankApplication</title>


    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
  <h1>Online Banking Application</h1>



  <%= yield %>
  <br><br>

  <%= link_to "Show all admins", people_url %><%= link_to "Show all friends", friends_url %>
  <%= link_to "Show all accounts", accounts_url %> <%= link_to "Show all transactions", transactions_url %>

  </body>
</html>
