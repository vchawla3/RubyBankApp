<p id="notice"><%= notice %></p>

<h1>All System Admins</h1>

<table>
  <thead>
    <tr>
      <th>Last Name&nbsp; &nbsp;</th>
      <th>First Name&nbsp; &nbsp;</th>
      <th>Middle Init&nbsp; &nbsp;</th>
      <th>Email Address&nbsp; &nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <% if person.is_admin %>
          <tr>
            <td><%= person.LName %></td>
            <td><%= person.FName %></td>
            <td><%= person.init %></td>
            <td><%= person.email %></td>
            <td><%= link_to 'Show', person %></td>
            <td><%= link_to 'Edit', edit_person_path(person) %></td>
            <td><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Admin or User', new_person_path %>
