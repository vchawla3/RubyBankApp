<%= form_for(transaction) do |f| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% transaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :transtype %>
    <%= select('transaction', 'transtype', ['Deposit', 'Withdraw', 'Transfer']) %>
  </div>

  <div class="field">
    <%= f.label "Sender" %>
    <%= select("transaction", "account_id", Account.all.collect{ |c| [ c.acc_number, c.id]}) %>
  </div>

  <div class="field">
    <%= f.label :receiver %>
    <%= select("transaction", "receiver", Account.all.collect{ |c| [ c.acc_number]}) %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.text_field :status %>
  </div>

  <div class="field">
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
