<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Status</th>
      <th>Amount</th>
      <th>Start date</th>
      <th>Effective date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @transactions.each do |transaction| %>
     <% if current_user.is_admin == true || @my_transaction == transaction.account.acc_number %>
      <tr>
        <td><%= transaction.transtype %></td>
        <td><%= transaction.account.acc_number %></td>
        <td><%= transaction.receiver %></td>
        <td><%= transaction.status %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.start_date %></td>
        <td><%= transaction.effective_date %></td>
        <td><%= link_to 'Show', transaction %></td>
        <% if transaction.status == 'Pending' && current_user.is_admin == false %>
            <td><%= link_to 'Cancel', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if transaction.status == 'Pending' && current_user.is_admin == true %>
            <td><%= link_to 'Approve/Decline', edit_transaction_path(transaction) %></td>
        <% end %>
      </tr>
     <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.is_admin == false %>
  <%= link_to 'New Transaction', new_transaction_path(:id => @my_transaction) %>
<% end %>