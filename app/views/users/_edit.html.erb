<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
      <div id="error_explanation">
         <h2><%= pluralize(user.errors.count, "error") %> prohibited this person from being saved:</h2>

         <ul>
           <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
           <% end %>
         </ul>
      </div>
  <% end %>

  <br><div class="field">
    <strong>Name:</strong>
    <%= @user.name %>
  </div>

  <br><div class="field">
    <strong>Email:</strong>
    <%= @user.email %>
  </div>

  <br><div class="field">
    <strong>Is Admin?:</strong>
    <%= f.check_box :is_admin, autofocus: true %>
  </div>

  <br><div class="field">
    <strong>Is User?:</strong>
    <%= f.check_box :is_user %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>