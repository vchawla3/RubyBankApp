<% if current_user.is_admin == true %>
<br>
<h1 style="color: darkblue; font-size: large;">All System Admins</h1>

<table>
  <thead style="color: darkblue; font-style: italic">
    <tr>
      <th>Name&nbsp; &nbsp;</th>
      <th>Email Address&nbsp; &nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.is_admin %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <% if current_user != user and user.name != 'Admin' %>
              <td><%= link_to 'Edit',edit_user_path(user) %></td>
              <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br><br><br>
<h2 style="color: darkblue; font-size: large;">All System Users</h2>

<table>
  <thead style="color: darkblue; font-style: italic">
  <tr>
    <th>Name&nbsp; &nbsp;</th>
    <th>Email Address&nbsp; &nbsp;</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <% if user.is_user %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <% if current_user != user and user.email != 'Admin' %>
                <td><%= link_to 'Edit',edit_user_path(user) %></td>
                <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Admin or User', new_user_path, method: :get %>

<% end %>
